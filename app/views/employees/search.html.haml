= render "search_bar"

%hr

%table.table.table-bordered.table-striped
  %tr
    %th= "Full Name"
    %th= "Date of Birth"
    %th= "Gender"
    %td
  - @results.each do |employee|
    %tr
      %td= employee.full_name
      %td= employee.dob
      %td= employee.gender.name
      %td= link_to "Edit", edit_employee_path(employee), class: "btn btn-primary"
