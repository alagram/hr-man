- if @results.present?
  - title "Displaying results for #{params[:q]} ... "
- else
  - title "Nothing found"

%hr

= render "search_bar"

%hr
- if @results.present?
  %table.table.table-bordered.table-striped
    %tr
      %th= "Full Name"
      %th= "Date of Birth"
      %th= "Gender"
      %td
    - @results.each do |employee|
      %tr
        %td= link_to employee, employee_path(employee)
        %td= employee.dob
        %td= employee.gender.name
        %td
          .text-center
            = link_to "Edit", edit_employee_path(employee), class: "btn btn-primary"
- else
  .alert.alert-danger{role: 'alert'}
    .text-center
      = "Your search - #{params[:q]} - did not find any records!"
