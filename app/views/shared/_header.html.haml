.container
  %nav.navbar.navbar-default{:role => "navigation"}
    .container-fluid
      .navbar-header
        %button.navbar-toggle.collapsed{"data-toggle" => "collapse", :type => "button"}
        = link_to "HR Manager", welcome_path, class: 'navbar-brand'
      - if current_user
        .collapse.navbar-collapse
          - if super_user?
            %ul.nav.navbar-nav
              %li
                = link_to admin_root_path do
                  %i.glyphicon.glyphicon-th
                  Dashboard
              - if super_user?
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    Employees
                    %span.caret
                  %ul.dropdown-menu{:role => "menu"}
                    %li
                      = link_to new_admin_employee_path do
                        %i.glyphicon.glyphicon-plus
                        Add Employee
                    %li
                      = link_to admin_employees_path do
                        %i.glyphicon.glyphicon-th-list
                        View Employees
          %ul.nav.navbar-nav
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Leave Menu
                %span.caret
              %ul.dropdown-menu{:role => "menu"}
                %li
                  = link_to new_leave_request_path do
                    %i.glyphicon.glyphicon-plus
                    Book Leave
                %li
                  = link_to leave_history_path do
                    %i.glyphicon.glyphicon-th-list
                    My Leave History
                %li
                  = link_to team_leave_history_path do
                    %i.glyphicon.glyphicon-th-list
                    My Team's Leave History
                %li
                  = link_to calendar_view_path do
                    %i.fa.fa-calendar
                    Calendar View
                - if current_user && super_user?
                  %li
                    = link_to pending_requests_path do
                      %i.glyphicon.glyphicon-question-sign
                      Pending Requests
                %li
                  %a{:href => "#"} Report
          %ul.nav.navbar-nav.navbar-right
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                #{current_user}
                %span.caret
              %ul.dropdown-menu{:role => "menu"}
                %li
                  = link_to sign_out_path do
                    %i.glyphicon.glyphicon-log-out
                    Sign out
                %li
                  %a{:href => "#"} Another Action
                %li.divider
                %li
                  %a{:href => "#"} Separated Action
