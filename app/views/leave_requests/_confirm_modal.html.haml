.modal.fade#confirm_modal
  .modal-dialog
    .modal-content
      .modal-header{style: "border-bottom: 0px;"}
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &#215;
        %h4.modal-title
      .modal-body
        %p Are you sure?
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} No
        %button.btn.btn-primary#leave_approval_yes{:type => "button"} Yes
