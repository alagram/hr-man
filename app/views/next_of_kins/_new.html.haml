.row
  .col-sm-5
    %h3 Add Next of Kin
    %br
    = bootstrap_nested_form_for [employee, @next_of_kin] do |f|
      = f.text_field :title, placeholder: 'Title'
      = f.text_field :first_name, placeholder: 'First Name'
      = f.text_field :other_names, placeholder: 'Other Names'
      = f.text_field :last_name, placeholder: 'Last Name'
      = f.text_field :telephone, placeholder: 'Telephone'
      = f.text_field :mobile, placeholder: 'Mobile'
      = f.text_field :address1
      = f.text_field :address2
      = f.select :state_id, State.all.map {|state| [state.name, state.id]}, {prompt: 'Select State'}, class: 'form-control'
      = f.text_field :postcode, placeholder: 'Postcode / Zipcode'
      = f.text_field :percentage, placeholder: 'Percentage'
      = f.form_group do
        = f.submit "Add Next of Kin", class: "btn btn-primary"
